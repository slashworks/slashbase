<script>

    window.addEvent('domready',function(){

        var mobileNav = document.getElementById('main-navigation-mobile');
        var navSelect = $$('#main-navigation-mobile select');
        if(mobileNav){

            mobileNav.addClass('jsmob');
            navSelect.addEvent('change',function(){
                window.location.href=this.value;
            })

        }


    })


</script>